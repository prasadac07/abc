@Override
public Map<String, InventoryResponse> getProjectInventoryByName(String projectName) {
    Map<String, InventoryResponse> result = new HashMap<>();

    result.put("gl", safeGetInventory("gl", projectName));
    result.put("s1", safeGetInventory("s1", projectName));

    return result;
}

private InventoryResponse safeGetInventory(String cluster, String projectName) {
    try {
        return getInventoryForCluster(cluster, projectName);
    } catch (Exception e) {
        // Optionally log the error:
        System.err.println("Project " + projectName + " not found in cluster: " + cluster);
        // Return an empty InventoryResponse
        InventoryResponse emptyResponse = new InventoryResponse();
        emptyResponse.setStatus("Not Found");
        emptyResponse.setPods(0);
        emptyResponse.setServices(0);
        emptyResponse.setRoutes(0);
        emptyResponse.setDeployments(0);
        emptyResponse.setReplicasets(0);
        emptyResponse.setStatefulSets(0);
        emptyResponse.setJobs(0);
        emptyResponse.setCronJobs(0);
        emptyResponse.setIngresses(0);
        emptyResponse.setPersistentvolumeClaims(0);
        emptyResponse.setConfigmaps(0);
        return emptyResponse;
    }
}
