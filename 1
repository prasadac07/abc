private InventoryResponse emptyInventoryResponse(String status) {
    InventoryResponse response = new InventoryResponse();
    response.setStatus(status);
    response.setPods(0);
    response.setServices(0);
    response.setRoutes(0);
    response.setDeployments(0);
    response.setReplicasets(0);
    response.setStatefulSets(0);
    response.setJobs(0);
    response.setCronJobs(0);
    response.setIngresses(0);
    response.setPersistentvolumeClaims(0);
    response.setConfigmaps(0);
    return response;
}
@Override
public Map<String, InventoryResponse> getProjectInventoryByName(String projectName) {
    Map<String, InventoryResponse> result = new HashMap<>();

    result.put("gl", safeGetInventory("gl", projectName));
    result.put("s1", safeGetInventory("s1", projectName));

    return result;
}

private InventoryResponse safeGetInventory(String cluster, String projectName) {
    try {
        return getInventoryForCluster(cluster, projectName);
    } catch (Exception e) {
        // Log if needed
        System.err.println("Error in cluster " + cluster + " for project " + projectName + ": " + e.getMessage());
        return emptyInventoryResponse("Error");
    }
}
